{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es5",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"declaration": true,
		"declarationDir": "dist",
		"outDir": "dist",
		"sourceMap": false,
		"baseUrl": "src"
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules/*"
	]
}